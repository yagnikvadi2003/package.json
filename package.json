{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "portfolio web-application using React and Typescript",
  "type": "module",
  "main": "main.tsx",
  "private": true,
  "scripts": {
    "start:dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint src/**/*.{js,ts,tsx,json}",
    "lint:fix": "eslint --fix 'src/**/*.{js,ts,tsx,json}'",
    "prettier": "prettier --write 'src/**/*.{js,ts,tsx,css,md,json}' --config ./.prettierrc",
    "pre:commit": "npm run prettier && npm run lint:fix",
    "preview": "vite preview"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "yarn run lint:fix",
    "**/*.{js,tsx,ts,less,md,json}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yagnikvadi2003/portfolio/",
    "directory": "src"
  },
  "keywords": [
    "TypeScript",
    "React",
    "Web Development"
  ],
  "author": "Yagnik Vadi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yagnikvadi2003/portfolio/issues"
  },
  "homepage": "https://github.com/yagnikvadi2003/portfolio#readme",
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "@vitejs/plugin-react": "^4.0.3",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "prettier": "^3.0.1",
    "prettier-eslint": "^15.0.1",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "engines": {
    "node": "18.x",
    "npm": "9.x",
    "yarn": "1.22.x"
  }
}
